<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.Dialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Table" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.TableRow" parent="AppTheme">
        <item name="android:padding">1dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="AppTheme.TableRowOdd" parent="AppTheme.TableRow">
        <item name="android:background">@color/odd</item>
    </style>

    <style name="AppTheme.TableRowEven" parent="AppTheme.TableRow">
        <item name="android:background">@color/even</item>
    </style>

    <style name="AppTheme.TableCellString" parent="AppTheme">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="AppTheme.TableCellStringHeading" parent="AppTheme">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.TableCellNumber" parent="AppTheme">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="AppTheme.TableCellNumberAttributeModifier" parent="AppTheme.TableCellNumber">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="AppTheme.Heading" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:background">@drawable/shape_heading</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.ListItemHeading" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="AppTheme.SkillListItemHeading" parent="AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="AppTheme.ListItemText" parent="AppTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="AppTheme.CharacterSheetImage" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="AppTheme.Edit" parent="AppTheme">
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.Centered" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.About" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.TransparentListView" parent="android:style/Widget.ListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:background">#AA000000</item>
    </style>

    <style name="AppTheme.ReleaseNotes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginBottom">60dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">invisible</item>
        <item name="android:background">#FF414141</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="AppTheme.ListItemSpelllist" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.ListItemSpelllistLevel" parent="AppTheme.ListItemSpelllist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="list_item_spelllist_number" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="AppTheme.ListItemSpelllistSpellName" parent="AppTheme.ListItemSpelllist">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.ListItemSpelllistSpellShortDescription" parent="AppTheme.ListItemSpelllist">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/dark_gary</item>
    </style>

    <style name="AppTheme.Spell" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.HorizontalLine" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="AppTheme.Weaponattack" parent="AppTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="AppTheme.ButtonDieRoll" parent="AppTheme">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.ListItemSpellslot" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.ListItemSpellslotLevel" parent="AppTheme.ListItemSpellslot">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@color/parchment</item>
    </style>

    <style name="AppTheme.PurchaseDialogHeading" parent="AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
