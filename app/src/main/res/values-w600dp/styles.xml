<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.ListItemHeading" parent="AppTheme">
        <item name="android:textSize">23sp</item>
        <item name="android:padding">4dp</item>
    </style>
    #

    <style name="AppTheme.SkillListItemHeading" parent="AppTheme">
        <item name="android:textSize">23sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="AppTheme.ListItemText" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="AppTheme.ListItemSpelllistLevel" parent="AppTheme.ListItemSpelllist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AppTheme.ListItemSpelllistSpellName" parent="AppTheme.ListItemSpelllist">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.ListItemSpelllistSpellShortDescription" parent="AppTheme.ListItemSpelllist">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gary</item>
    </style>

</resources>