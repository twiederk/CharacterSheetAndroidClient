<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <TableLayout style="@style/AppTheme.Centered">

        <!-- HEADING -->

        <TableRow>

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/save_name" />

            <TextView
                style="@style/AppTheme.TableCellStringHeading"
                android:text="@string/save_base_save" />

            <TextView
                style="@style/AppTheme.TableCellStringHeading"
                android:text="@string/save_attribute_modifier" />

            <TextView
                style="@style/AppTheme.TableCellStringHeading"
                android:text="@string/save_modifier" />
        </TableRow>

        <!-- FORTITUDE -->

        <TableRow>

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/save_fortitude_label" />

            <TextView
                android:id="@+id/save_fortitude_base"
                style="@style/AppTheme.TableCellNumber" />

            <TextView
                android:id="@+id/save_fortitude_attribute"
                style="@style/AppTheme.TableCellNumber" />

            <com.android.ash.charactersheet.gui.widget.numberview.StepNumberView
                android:id="@+id/save_fortitude_modifier"
                style="@style/AppTheme.Edit" />
        </TableRow>

        <!-- REFLEX -->

        <TableRow>

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/save_reflex_label" />

            <TextView
                android:id="@+id/save_reflex_base"
                style="@style/AppTheme.TableCellNumber" />

            <TextView
                android:id="@+id/save_reflex_attribute"
                style="@style/AppTheme.TableCellNumber" />

            <com.android.ash.charactersheet.gui.widget.numberview.StepNumberView
                android:id="@+id/save_reflex_modifier"
                style="@style/AppTheme.Edit" />
        </TableRow>

        <!-- WILL -->

        <TableRow>

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/save_will_label" />

            <TextView
                android:id="@+id/save_will_base"
                style="@style/AppTheme.TableCellNumber" />

            <TextView
                android:id="@+id/save_will_attribute"
                style="@style/AppTheme.TableCellNumber" />

            <com.android.ash.charactersheet.gui.widget.numberview.StepNumberView
                android:id="@+id/save_will_modifier"
                style="@style/AppTheme.Edit" />
        </TableRow>
    </TableLayout>

</LinearLayout>
