<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.Table">

    <TextView
        style="@style/AppTheme.Heading"
        android:text="@string/appearance_title" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- PLAYER -->

        <TableRow style="@style/AppTheme.TableRowOdd">

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/appearance_player_label" />

            <TextView
                android:id="@+id/appearance_player"
                style="@style/AppTheme.TableCellString" />
        </TableRow>

        <!-- RACE -->

        <TableRow style="@style/AppTheme.TableRowEven">

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/appearance_race_label" />

            <TextView
                android:id="@+id/appearance_race"
                style="@style/AppTheme.TableCellString" />
        </TableRow>

        <!-- SEX -->

        <TableRow style="@style/AppTheme.TableRowOdd">

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/appearance_sex_label" />

            <TextView
                android:id="@+id/appearance_sex"
                style="@style/AppTheme.TableCellString" />
        </TableRow>

        <!-- CLASS -->

        <TableRow style="@style/AppTheme.TableRowEven">

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/appearance_class_level_label" />

            <TextView
                android:id="@+id/appearance_class_level"
                style="@style/AppTheme.TableCellString"
                android:singleLine="false" />
        </TableRow>

        <!-- ALIGNMENT -->

        <TableRow style="@style/AppTheme.TableRowOdd">

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/appearance_alignment_label" />

            <TextView
                android:id="@+id/appearance_alignment"
                style="@style/AppTheme.TableCellString" />
        </TableRow>

        <!-- EXPERIENCE POINTS -->

        <TableRow style="@style/AppTheme.TableRowEven">

            <TextView
                android:id="@+id/appearance_experience_label"
                style="@style/AppTheme.TableCellString"
                android:text="@string/appearance_experience_label" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ProgressBar
                    android:id="@+id/appearance_experience_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:progressDrawable="@android:drawable/progress_horizontal" />

                <TextView
                    android:id="@+id/appearance_experience"
                    style="@style/AppTheme.TableCellString"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" />
            </FrameLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>