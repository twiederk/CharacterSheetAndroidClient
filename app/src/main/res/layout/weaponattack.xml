<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:importantForAutofill="noExcludeDescendants">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >

            <TableRow android:layout_width="fill_parent" >

                <TextView
                    style="@style/base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weaponattack_name"
                    android:labelFor="@+id/weaponattack_name" />

                <EditText
                    android:id="@+id/weaponattack_name"
                    style="@style/base"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:inputType="textCapWords" />
            </TableRow>

            <TableRow android:layout_width="fill_parent" >

                <TextView
                    style="@style/base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weaponattack_weapon" />

                <TextView
                    android:id="@+id/weaponattack_weapon"
                    style="@style/base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dip" />
            </TableRow>

            <TableRow android:layout_width="fill_parent" >

                <TextView
                    style="@style/base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weaponattack_attackwield" />

                <Spinner
                    android:id="@+id/weaponattack_attackwield"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow android:layout_width="fill_parent" >

                <TextView
                    style="@style/base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weaponattack_attack_bonus_modifier"
                    android:labelFor="@+id/weaponattack_attack_bonus_modifier" />

                <EditText
                    android:id="@+id/weaponattack_attack_bonus_modifier"
                    style="@style/base"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:inputType="numberSigned" />
            </TableRow>

            <TableRow android:layout_width="fill_parent" >

                <TextView
                    style="@style/base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weaponattack_damage_bonus_modifier"
                    android:labelFor="@+id/weaponattack_damage_bonus_modifier" />

                <EditText
                    android:id="@+id/weaponattack_damage_bonus_modifier"
                    style="@style/base"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:inputType="numberSigned" />
            </TableRow>

            <TableRow
                android:id="@+id/weaponattack_ammunition_tablerow"
                android:layout_width="fill_parent" >

                <TextView
                    style="@style/base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weaponattack_ammo"
                    android:labelFor="@+id/weaponattack_ammo" />

                <EditText
                    android:id="@+id/weaponattack_ammo"
                    style="@style/base"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:inputType="number" />
            </TableRow>
        </TableLayout>

        <TextView
            style="@style/base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weaponattack_desc"
            android:labelFor="@+id/weaponattack_desc" />

        <EditText
            android:id="@+id/weaponattack_desc"
            style="@style/base"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:inputType="textCapSentences|textMultiLine" />
    </LinearLayout>

</ScrollView>
