<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="0,1" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <TableRow>

        <TextView
            style="@style/base"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/class_administration_ability_edit_label_name" />

        <TextView
            android:id="@+id/class_administration_ability_edit_name"
            style="@style/base"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </TableRow>

    <TableRow>

        <TextView
            style="@style/base"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/class_administration_ability_edit_label_level" />

        <com.android.ash.charactersheet.gui.widget.numberview.StepNumberView
            android:id="@+id/class_administration_ability_edit_level"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </TableRow>

</TableLayout>