<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.CharacterListDialog"
    android:background="@drawable/character_list_dialog">

    <!-- HEADING -->
    <TextView
        android:id="@+id/game_system_selector_heading"
        style="@style/AppTheme.ListItemHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/game_system_selector_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- DNDV35 BUTTON -->
    <Button
        android:id="@+id/game_system_selector_dndv35_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_system_selector_dndv35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_system_selector_heading" />

    <!-- DNDV5E BUTTON -->
    <Button
        android:id="@+id/game_system_selector_dnd5e_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_system_selector_dndv5e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_system_selector_dndv35_button" />

    <!-- PATHFINDER BUTTON -->
    <Button
        android:id="@+id/game_system_selector_pathfinder_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/game_system_selector_pathfinder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_system_selector_dnd5e_button" />

    <TextView
        style="@style/AppTheme.ListItemHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/game_system_selector_explain_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_system_selector_pathfinder_button" />

</androidx.constraintlayout.widget.ConstraintLayout>