<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.Table"
    android:layout_toEndOf="@id/combat_include">

    <TextView
        style="@style/AppTheme.Heading"
        android:text="@string/save_title" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- FORTITUDE -->

        <TableRow style="@style/AppTheme.TableRowOdd">

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/save_fortitude_label" />

            <Button
                android:id="@+id/save_fortitude"
                style="@style/AppTheme.ButtonDieRoll" />
        </TableRow>

        <!-- REFLEX -->

        <TableRow style="@style/AppTheme.TableRowEven">

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/save_reflex_label" />

            <Button
                android:id="@+id/save_reflex"
                style="@style/AppTheme.ButtonDieRoll" />
        </TableRow>

        <!-- WILL -->

        <TableRow style="@style/AppTheme.TableRowOdd">

            <TextView
                style="@style/AppTheme.TableCellString"
                android:text="@string/save_will_label" />

            <Button
                android:id="@+id/save_will"
                style="@style/AppTheme.ButtonDieRoll" />
        </TableRow>
    </TableLayout>

</LinearLayout>
